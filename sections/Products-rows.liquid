        "label": "Show product vendors",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_product_review",
        "label": "Show product Reviews",
        "default": false
      }, 
      {
        "type": "checkbox",
        "id": "show_view_all",
        "label": "Show 'View all' button",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Products Rows",
        "category": "Products"
      }
    ]
  }
{% endschema %}

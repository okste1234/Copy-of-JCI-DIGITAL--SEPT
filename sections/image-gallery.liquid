{% capture imageGallery %}
<div class="imgBnrOuter{% if section.settings.hide_mobile %} small--hide{% endif %} {{section.settings.top-offeset}}">
  	<div class="{% if section.settings.fullwidth %}fullwidth{% else %}page-width{%endif%}">
     
      {%- if section.settings.title != blank or section.settings.subtitle != blank %}
        <div class="section-header text-center">
          <h2 class="h2">{{ section.settings.title | escape }}</h2>  
          {%- if section.settings.subtitle != blank -%}
          <p>{{section.settings.subtitle}}</p>
          {% endif %}
       </div>
      {%- endif -%}
      
		{%- for block in section.blocks -%}
			{%- if block.type == 'style1' -%}
				<div class="grid" {{ block.shopify_attributes }}>
					<div class="grid__item medium-up--one-half img-bnr wow fadeIn" data-wow-delay="0ms">
						<div class="inner {{block.settings.bnr1align}}">{% include 'image-grid', image: block.settings.image1, title: block.settings.text1, link: block.settings.link1, imgSize: '930x620' %}</div>
					</div>
					<div class="grid__item one-half medium-up--one-quarter img-bnr wow fadeIn" data-wow-delay="50ms">
						<div class="inner {{block.settings.bnr2align}}">{% include 'image-grid', image: block.settings.image2, title: block.settings.text2, link: block.settings.link2, imgSize: '460x300' %}</div>
					</div>
					<div class="grid__item one-half medium-up--one-quarter img-bnr wow fadeIn" data-wow-delay="100ms">
						<div class="inner {{block.settings.bnr3align}}">{% include 'image-grid', image: block.settings.image3, title: block.settings.text3, link: block.settings.link3, imgSize: '460x300' %}</div>
					</div>
					<div class="grid__item medium-up--one-half img-bnr wow fadeIn" data-wow-delay="150ms">
						<div class="inner {{block.settings.bnr4align}}">{% include 'image-grid', image: block.settings.image4, title: block.settings.text4, link: block.settings.link4, imgSize: '930x300' %}</div>

					<div class="grid__item medium-up--one-quarter">
						<div class="img-bnr wow fadeIn" data-wow-delay="0ms">
                           	<div class="inner {{block.settings.bnr1align}}">{% include 'image-grid', image: block.settings.image1, title: block.settings.text1, link: block.settings.link1, imgSize: '460x460' %}</div>

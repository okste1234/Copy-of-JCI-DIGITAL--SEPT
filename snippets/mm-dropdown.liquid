<li
  {% if link.active %}
    class="active"
  {% endif %}
>
  {%- assign label1 = link.title | split: '[label' | last | split: ']' | first | prepend: 'nm_label' -%}
  <a href="{{ link.url }}" class="site-nav">
    {{- link.title | split: '[label' | first }}
    {% if link.title contains '[label' -%}
      <span class="lbl {{label1}}">{{ section.settings[label1] }}</span>
    {%- endif %}
    {% if link.links != blank %}<i class="ad ad-angle-right-l"></i>{% endif -%}
    ></a
  >
  {%- if link.links != blank -%}
    <ul>
      {%- for lvl1 in link.links -%}
        <li
          {% if lvl1.active %}
            class="active"
          {% endif %}
        >
          {%- assign label2 = lvl1.title | split: '[label' | last | split: ']' | first | prepend: 'nm_label' -%}
          <a href="{{ lvl1.url }}" class="site-nav">
            {{- lvl1.title | split: '[label' | first }}
            {% if lvl1.title contains '[label' -%}
              <span class="lbl {{label2}}">{{ section.settings[label2] }}</span>
            {%- endif %}
            {% if lvl1.links != blank %}<i class="fa fa-angle-right-l"></i>{% endif -%}
            ></a
          >
          {%- if lvl1.links != blank -%}
            <ul>
              {% for lvl2 in lvl1.links %}
                <li>
                  <a href="{{ lvl2.url }}" class="site-nav">{{ lvl2.title | escape }}</a>
                </li>
              {% endfor %}
            </ul>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
</li>

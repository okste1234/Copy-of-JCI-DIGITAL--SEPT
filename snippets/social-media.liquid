<ul class="list--inline site-footer__social-icons social-icons">
  {% if settings.social_facebook_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_facebook_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}"><i class="ad ad-facebook-square"></i> <span class="icon__fallback-text">Facebook</span></a></li>{% endif %}
  {% if settings.social_twitter_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_twitter_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}"><i class="ad ad-twitter"></i> <span class="icon__fallback-text">Twitter</span></a></li>{% endif %}
  {% if settings.social_google_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_google_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Google+' }}" target="_blank"><i class="ad ad-google-plus-g" aria-hidden="true"></i> <span class="icon__fallback-text">Google+</span></a></li>{% endif %}
  {% if settings.social_pinterest_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_pinterest_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Pinterest' }}"><i class="ad ad-pinterest"></i> <span class="icon__fallback-text">Pinterest</span></a></li>{% endif %}
  {% if settings.social_instagram_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_instagram_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}"><i class="ad ad-instagram"></i> <span class="icon__fallback-text">Instagram</span></a></li>{% endif %}
  {% if settings.social_tumblr_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_tumblr_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Tumblr' }}"><i class="ad ad-tumblr"></i> <span class="icon__fallback-text">Tumblr</span></a></li>{% endif %}
  {% if settings.social_snapchat_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_snapchat_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Snapchat' }}"><i class="ad ad-snapchat"></i> <span class="icon__fallback-text">Snapchat</span></a></li>{% endif %}
  {% if settings.social_youtube_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_youtube_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'YouTube' }}"><i class="ad ad-youtube"></i> <span class="icon__fallback-text">YouTube</span></a></li>{% endif %}
  {% if settings.social_vimeo_link != blank %}<li><a class="social-icons__link" href="{{ settings.social_vimeo_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Vimeo' }}"><i class="ad ad-vimeo"></i> <span class="icon__fallback-text">Vimeo</span></a></li>{% endif %}
  {% if template.name == 'blog' or template.name == 'article' %}<li><a class="social-icons__link" href="{{ shop.url }}{{ blog.url }}.atom" target="_blank"><i class="ad ad-rss"></i> <span class="icon__fallback-text">RSS</span></a></li>{% endif %}
</ul>
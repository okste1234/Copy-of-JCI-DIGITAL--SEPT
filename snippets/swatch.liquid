{%- if template contains 'json' -%}
  {%- assign vrsize = settings.color_size -%}
  {%- assign vrstyle = settings.color_style -%}
{%- else -%}
  {%- assign vrsize = section.settings.color_size -%}
  {%- assign vrstyle = section.settings.color_style -%}
{%- endif -%}

{%- assign found_option = false -%}
{%- assign is_color = false -%}
{% assign is_size = false %}
{%- assign option_index = 0 -%}
{%- for option in product.options -%}
	{%- if option == swatch -%}
        {%- assign found_option = true -%}
        {%- assign option_index = forloop.index0 -%}
        {%- assign downcased_option = swatch | downcase -%}
        {%- if downcased_option contains 'color' or downcased_option contains 'colour' -%}{% assign is_color = true %}{%- endif -%}
		{% if downcased_option contains 'size' %} {% assign is_size = true %} {% endif %}    
   	{%- endif -%}
{%- endfor -%}
<div class="swatch clearfix swatch-{{ option_index }} option{{option_index |plus: 1}}" data-option-index="{{ option_index }}">
	<div class="product-form__item">
      	<label class="header">{{ swatch }}: <span class="slVariant"></span></label>
        {%- assign values = '' -%}
        {%- for variant in product.variants -%}
          {%- assign value = variant.options[option_index] -%}
          {%- unless values contains value -%}
            {%- assign values = values | join: ',' -%}
            {%- assign values = values | append: ',' | append: value -%}
            {%- assign values = values | split: ',' -%}
          	<div data-value="{{ value | escape }}" class="swatch-element {% if is_color %}color {% endif %}{{ value | handle }} {% if variant.available %}available{% else %}soldout{% endif %}">
              <input class="swatchInput" id="swatch-{{ option_index }}-{{ value | handle }}" type="radio" name="option-{{ option_index }}" value="{{ value | escape }}" {% unless variant.available %}disabled{% endunless %} />
              {%- if is_color -%}
              	{%- if section.settings.color_type == "color" -%}
            		<label class="swatchLbl color {{vrsize}} {{vrstyle}}" for="swatch-{{ option_index }}-{{ value | handle }}" style="background-color:{{ value | replace: ' ', '' | handle }};" title="{{value}}"></label>
              	{%- elsif section.settings.color_type == "image" -%}
              		<label class="swatchLbl color {{vrsize}} {{vrstyle}}" for="swatch-{{ option_index }}-{{ value | handle }}" style="background-color:{{ value | replace: ' ', '' | handle }};background-image:url({{ value | handle | append: '.png' | file_url | split: "?" | first }});" title="{{value}}"></label>
            	{%- else -%}
            		<label class="swatchLbl color {{vrsize}} {{vrstyle}}" for="swatch-{{ option_index }}-{{ value | handle }}" style="background-image:url({{ variant.image.src | product_img_url: 'small'}});" title="{{ value }}"></label>
            	{%- endif -%}
              {%- else -%}
              	<label class="swatchLbl {{vrsize}} size {{vrstyle}}" for="swatch-{{ option_index }}-{{ value | handle }}" title="{{ value }}">{{ value }}</label>
              {%- endif -%}
            </div>       		
          {%- endunless -%}
        {%- endfor -%}      
    </div>
</div>
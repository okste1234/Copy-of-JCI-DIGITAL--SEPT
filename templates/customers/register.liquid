<div class="page section-header">
	<h1 class="text-center">{{ 'customer.register.title' | t }}</h1>
</div>
<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter">
      <div class="form-vertical">
        {% form 'create_customer' %}      

          {{ form.errors | default_errors }}

          <label for="FirstName" class="hidden">{{ 'customer.register.first_name' | t }}</label>
          <input type="text" name="customer[first_name]" placeholder="{{ 'customer.register.first_name' | t }}" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus>

          <label for="LastName" class="hidden">{{ 'customer.register.last_name' | t }}</label>
          <input type="text" name="customer[last_name]" placeholder="{{ 'customer.register.last_name' | t }}" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>

          <label for="Email" class="hidden">{{ 'customer.register.email' | t }}</label>
          <input type="email" name="customer[email]" id="Email" placeholder="{{ 'customer.register.email' | t }}" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

          <label for="CreatePassword" class="hidden">{{ 'customer.register.password' | t }}</label>
          <input type="password" name="customer[password]" placeholder="{{ 'customer.register.password' | t }}" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">

          <p class="text-center">
            <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
          </p>
        {% endform %}
      </div>
    </div>
  </div>
</div>
